generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum ProductStatus {
  DRAFT
  PENDING
  ACTIVE
  SOLD
}

enum OrderStatus {
  PENDING
  ACCEPTED
  DECLINED
  CONFIRMED
  DELIVERED
  CANCELLED
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  image       String?
  parentId    String?
  parent      Category?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
  children    Category[] @relation("CategoryToCategory")
  products    Product[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([slug])
  @@index([parentId])
  @@map("category")
}

model Product {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  description String
  price       Float
  images      Json          @default("[]") 
  categoryId  String
  category    Category      @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  stock       Int           @default(0)
  status      ProductStatus @default(DRAFT)
  attributes  Json          @default("{}") 
  isHero      Boolean       @default(false)
  isFeatured  Boolean       @default(false)
  userId      String?       
  user        User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  averageRating Float        @default(0)
  totalRatings  Int          @default(0)
  
  reviews     Review[]
  orderItems  OrderItem[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  @@index([categoryId])
  @@index([userId])
  @@index([status])
  @@index([slug])
  @@map("product")
}

model Review {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  rating    Int      
  title     String?
  comment   String?
  images    Json     @default("[]") 
  
  helpfulCount    Int @default(0)
  notHelpfulCount Int @default(0)
  
  isVerified Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([productId, userId]) 
  @@index([productId])
  @@index([userId])
  @@index([rating])
  @@map("review")
}

enum Role {
  USER
  VENDOR
  ADMIN
}

model User {
  id            String    @id
  email         String    @unique
  name          String?
  emailVerified Boolean
  image         String?
  phoneNumber   String?
  birthday      DateTime?
  gender        String?
  role          Role      @default(USER)
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  products      Product[] 
  reviews       Review[]  
  addresses     Address[]
  orders        Order[]
  
  @@map("user")
}

model Address {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fullName        String
  phoneNumber     String
  address         String
  region          String
  postcode        String?
  label           String   @default("HOME") // HOME or OFFICE
  isDefaultShipping Boolean @default(false)
  isDefaultBilling  Boolean @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@map("address")
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  items           OrderItem[]
  
  subtotal        Float
  shippingCost    Float       @default(0)
  total           Float
  
  status          OrderStatus @default(PENDING)
  
  shippingName    String
  shippingPhone   String
  shippingAddress String
  shippingRegion  String
  
  paymentMethod   String      @default("COD")
  note            String?
  declineReason   String?
  cancelReason    String?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([userId])
  @@index([status])
  @@map("order")
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  vendorId    String
  
  name        String
  image       String
  price       Float
  quantity    Int
  
  createdAt   DateTime @default(now())
  
  @@index([orderId])
  @@index([vendorId])
  @@map("order_item")
}

model Session {
  id        String   @id
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id           String    @id
  userId       String
  accountId    String
  providerId   String
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  password     String?
  createdAt    DateTime
  updatedAt    DateTime
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
  
  @@map("verification")
}